alias c="clear"
alias cat="bat"
alias ls="eza --color"
alias l="ls -lAh"
alias z="zoxide query"
alias compress="xargs -P0 -I % tar -czf %.tar.gz %"
alias stow="stow -d ~/dotfiles/ ."

# dnf
alias dnfs="dnf search"
alias dnfsi="dnf list --installed | fzf --multi --query"
alias dnfl="dnf list"
alias dnfi="sudo dnf install"
alias dnfr="sudo dnf remove"
alias dnfu="sudo dnf upgrade && flatpak upgrade"
alias dnfur="sudo dnf upgrade --refresh && flatpak upgrade"
alias dnfury="sudo dnf upgrade --refresh -y && flatpak upgrade -y"
alias s=dnfs
alias si=dnfsi
alias i=dnfi
alias r=dnfr
alias u=dnfur
alias uy=dnfury

